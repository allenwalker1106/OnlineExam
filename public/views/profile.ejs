  <title>
    Diplo 
  </title>
  
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
  <!--     Fonts and icons     -->

  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.css" rel="stylesheet">
  <!-- CSS Files -->
  <link href="lib/css/bootstrap.min.css" rel="stylesheet" />
  <link href="lib/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" /> 
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="white" data-active-color="danger">
      <div class="logo">
        <a href="/user_setting" class="simple-text logo-mini">
          <div class="logo-image-small" style="border-radius: 50%;">
            <img src=<%-user.profile_image_link%> >
          </div>
        </a>
        <a href="/user_setting" class="simple-text logo-normal">
          <%=user.name.firstname%>
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li >
            <a href="/dashboard">
              <i class="fa fa-columns"></i>
              <p>Dashboard</p>
            </a>
          </li>
          <li>
            <a href="/questions">
              <i class="fa fa-list-ul"></i>
              <p>Questions</p>
            </a>
          </li>
          <li>
            <a href="./tests">
              <i class="fa fa-copy"></i>
              <p>Tests</p>
            </a>
          </li>
          <li>
            <a href="./links">
              <i class="fa fa-link"></i>
              <p>Links</p>
            </a>
          </li>
          <li>
            <a href="./groups">
                <i class="fa fa-users"></i>
                <p>Groups</p>
            </a>
          </li>
          <li>
            <a href="./results">
              <i class="fa fa-file"></i>
              <p>Results</p>
            </a>
          </li>
          <li>
            <a href="./files">
              <i class="fa fa-image"></i>
              <p>Uploads files</p>
            </a>
          </li>
          <li  class="active">
            <a href="./user">
                <i class="fa fa-user"></i>
                <p>User Profile</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <div class="navbar-toggle">
              <button type="button" class="navbar-toggler">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </button>
            </div>Australia
            <a class="navbar-brand" href="#pablo">Diplo</a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <form>
              <div class="input-group no-border">
                <input type="text" value="" class="form-control" placeholder="Search...">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <i class="fa fa-search"></i>
                  </div>
                </div>
              </div>
            </form>
            <ul class="navbar-nav">
              <li class="nav-item btn-rotate dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fa fa-cog"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                  <a class="dropdown-item" href="#">Settings</a>
                  <a class="dropdown-item" href="#">Update Account</a>
                  <a class="dropdown-item" href="#">Logout</a>
                </div>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>

      <div class="content">
            <div class="row">
              <div class="col-md-4">
                <div class="card card-user">
                  <div class="image">
                    <img src="/data/image/astronos_mountain.jpg" alt="...">
                  </div>
                  <div class="card-body">
                    <div class="author">
                      <a href="#">
                        <img class="avatar border-gray" src=<%-user.profile_image_link%> alt="...">
                        <h5 class="title"><%=user.name.firstname%> <%=user.name.lastname%></h5>
                      </a>
                      <p class="description">
                        <%=user.email%>
                      </p>
                    </div>
                    <p class="description text-center">
                      <%= user.aboutme%>
                    </p>
                  </div>
                  <div class="card-footer">
                    <hr>
                    <div class="button-container">
                      <div class="row">
                        <div class="col-lg-3 col-md-6 col-6 ml-auto">
                          <h5><%= user.tests.length%>
                            <br>
                            <small>Tests</small>
                          </h5>
                        </div>
                        <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                          <h5><%=user.questions.length%>
                            <br>
                            <small>Question</small>
                          </h5>
                        </div>
                        <div class="col-lg-4 mr-auto">
                          <h5><%=user.courses.length%>
                            <br>
                            <small>Courses</small>
                          </h5>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card card-user">
                  <div class="card-header">
                    <h5 class="card-title">Edit Profile</h5>
                  </div>
                  <div class="card-body">
                    <form method = "POST" action="/update_profile">
                      <div class="row">
                        <div class="col-md-5 pr-1">
                          <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" placeholder="Username" value=<%=user.username %> disabled>
                          </div>
                        </div>
                        <div class="col pl-1">
                          <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" placeholder="Email" disabled >
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4 pr-1">
                          <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" placeholder="Company" name="user_info[name][firstname]" value=<%=user.name.firstname%> >
                          </div>
                        </div>
                        <div class="col pr-1">
                          <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text" class="form-control" placeholder="Middle Name" name="user_info[name][middlename]" value='<%=user.name.middlename%>' >
                          </div>
                        </div>
                        <div class="col-md-4 ">
                          <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" placeholder="Last Name" name="user_info[name][lastname]" value='<%=user.name.lastname%>' >
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Home Address"  value='<%=[user.address.city,user.address.country].join(" "); %>' disabled>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4 pr-1">
                          <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" placeholder="City" name="user_info[addess][city]" value='<%=user.address.city%>'>
                          </div>
                        </div>
                        <div class="col-md-4 px-1">
                          <div class="form-group">
                            <label>Country</label>
                            <input type="text" class="form-control" placeholder="Country" name="user_info[addess][country]" value='<%=user.address.country%>'>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label>About Me</label>
                            <textarea name="user_info[about_me]" class="form-control textarea"><%=user.about_me%></textarea>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="update ml-auto mr-auto">
                          <button type="submit" class="btn btn-primary btn-round">Update Profile</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>



      <footer class="footer footer-black  footer-white ">
        <div class="container-fluid">
          <div class="row">
            <nav class="footer-nav">
              <ul>
                <li>
                  <a href="#" target="_blank">Diplo</a>
                </li>
                <li>
                  <a href="#" target="_blank">Blog</a>
                </li>
                <li>
                  <a href="#"   target="_blank">Licenses</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </footer>
    </div>
  </div>
  
  <!--   Core JS Files   -->
  <script src="lib/js/core/jquery.min.js"></script>
  <script src="lib/js/core/popper.min.js"></script>
  <script src="lib/js/core/bootstrap.min.js"></script>
  <script src="lib/js/plugins/perfect-scrollbar.jquery.min.js"></script>
  <!-- Chart JS -->
  <script src="lib/js/plugins/chartjs.min.js"></script>
  <!--  Notifications Plugin    -->
  <script src="lib/js/plugins/bootstrap-notify.js"></script>
  <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="lib/js/paper-dashboard.min.js" type="text/javascript"></script>

</body>

</html>
